{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file", 
            // Windows MingW uses g++.exe
            // Windows Clang uses clang++.exe
            "command": "C:\\msys64\\mingw64\\bin\\g++.exe",
            // Windows MingW: "C:\\msys64\\mingw64\\bin\\g++.exe",
            // Windows Clang: "C:/Program Files/LLVM/bin/clang++.exe",
            // MacOS Clang: 
            "args": [
                // "-fcolor-diagnostics", // Clang
                // "-fansi-escape-codes", // Clang
                "-fdiagnostics-color=always", // MingW
                "-I${workspaceFolder}",
                "-I${workspaceFolder}/src/glfw/include", // GLFW - https://github.com/glfw/glfw/releases/download/3.3.9/glfw-3.3.9.bin.WIN64.zip
                "-I${workspaceFolder}/src/glad/include", // GLAD - https://glad.dav1d.de/ (flags Profile = Core, gl = Version 3.0)
                "-I${workspaceFolder}/src/googletest/googletest/include", // Googletest - https://github.com/google/googletest.git
                "-g",
                "${fileDirname}/*.cpp",
                "${workspaceFolder}/src/adding.cpp",
                "${workspaceFolder}/src/glad/src/glad.c", // GLAD include with main.cpp source file
                "-o",
                "${workspaceFolder}/${fileBasenameNoExtension}.exe",
                /* STATIC VS DYNAMIC
                Static libraries (.lib files on Windows, .a files on Unix-like systems)
                Dynamic libraries (.dll/.dll.a (for linking) files on Windows, .so files on Unix-like systems)
                */
                "-L${workspaceFolder}/src/glfw/lib-mingw-w64", // GLFW
                "-L${workspaceFolder}/src/googletest/build/lib", // Google test: Generating STATIC LIB: cmake -G "MinGW Makefiles" -Dgtest_build_tests=OFF -DBUILD_SHARED_LIBS=OFF ..
                "-lglfw3", // GLFW
                "-lopengl32",
                "-lgtest", // Google test
                "-lgtest_main", // Google test
                "-lgdi32", // Required for Windows GLFW/GLAD, Windows GDI (Graphics Device Interface) API GDI32 library
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc" // Both MingW/Clang use "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}